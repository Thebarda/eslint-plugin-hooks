{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
